{
  "compilerOptions": {
    "baseUrl": "./src",
    "module": "UMD",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "lib": ["es6"],
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "exclude": ["node_modules", "**/*.spec.ts"]
}
